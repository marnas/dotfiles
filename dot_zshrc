# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="mrtazz"

plugins=(copyfile dirhistory git sudo vi-mode zsh-autosuggestions zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh

# Enable vi mode
bindkey -v

(( ${+ZSH_HIGHLIGHT_STYLES} )) || typeset -A ZSH_HIGHLIGHT_STYLES
ZSH_HIGHLIGHT_STYLES[path]=none
ZSH_HIGHLIGHT_STYLES[path_prefix]=none

# setting variables for go
export GOPATH=$HOME/go
export GOBIN=$GOPATH/bin

CARGOBIN=$HOME/.cargo/bin
LOCALBIN=$HOME/.local/bin

export PATH=$PATH:$GOBIN:$HOME:$CARGOBIN:$LOCALBIN
export RUST_WRAPPER=sccache

# add kubectl autocomplete
[[ /usr/local/bin/kubectl ]] && source <(kubectl completion zsh)

# setting up few alias
alias vim="nvim"
alias k="kubectl"
alias pac="sudo pacman"
alias docker="sudo docker"
alias cat="bat"
